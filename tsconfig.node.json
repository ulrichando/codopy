{
  "compilerOptions": {
    "module": "commonjs", // Use CommonJS for Node.js
    "target": "ES2020",
    "outDir": "./dist", // Specify the output directory
    "rootDir": "./src", // Specify the root directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Ensure Node module resolution
    "composite": true // Add this line
  },
  "include": [
    "src/**/*.ts"
  ]
}