{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // Make sure this line is present
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.json",
    "src/**/*.css",
    "src/**/*.scss",
    "src/**/*.svg",
    "src/components/common/CustomCursor.tsx",
    "src/components/common/Footer copy",
    "src/components/common/DraggableSroll.js",
    "src/components/common/CircularMenu.js",
    "src/utils/DarkMode.tsx",
    "src/utils/videoPlayer.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}